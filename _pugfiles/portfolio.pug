  .projectThree#projectThree
    a(href="https://apex.org" target="_blank")
      img.portfolio__img(src="./assets/img/apex-org.gif" alt="APEX")
    .portfolio__about
      h4 Title
        span APEX 
      h4 Tools
        span HTML, CSS, PHP, MySQL, WordPress, Mailchimp
